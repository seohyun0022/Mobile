<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".mypage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 메뉴 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 프로필 -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/user_name"
                android:layout_marginEnd="16dp" />

            <!-- 사용자 이름 -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 이름"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintBottom_toTopOf="@id/user_id"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                />

            <!-- 사용자 id -->
            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 id"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#888888"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                app:layout_constraintBottom_toTopOf="@+id/user_intro"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                />


            <!-- 자기소개 -->
            <TextView
                android:id="@+id/user_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기소개"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/user_id"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                />

            <!-- 설정 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_profile_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로우 하기"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="#A2E9A6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- 리뷰 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/review_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/place_name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="장소 이름 1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/review_image1"
                    android:layout_marginEnd="8dp" />

                <RatingBar
                    android:id="@+id/review_rating1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    app:layout_constraintTop_toBottomOf="@id/place_name1"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/review_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/review_rating1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/review_image1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/review_image2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/place_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="장소 이름 2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/review_image2"
                    android:layout_marginEnd="8dp" />

                <RatingBar
                    android:id="@+id/review_rating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    app:layout_constraintTop_toBottomOf="@id/place_name2"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/review_text2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/review_rating2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/review_image2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>